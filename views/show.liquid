{% layout "layout.liquid" %}
{% block content %}
<div class="sDisplay">
    <div class="modal">
        <div class="modalBox">
            <h2>Are you sure you want to delete this item?</h2>
            <h4>{{item.name}}</h4>
            <img src="
            {% if item.img == '' || null || undefined %}
            data:image/png;base64,
            {% else %}
            {{item.img}}
            {% endif %}
            " alt="" class="modalImg">
            <div class="modalBtns">
                <form action="/inventory/{{item._id}}?_method=DELETE" method="post">
                <input type="submit" value="DELETE">
                </form>
                <button id="modalHide">CANCEL</button>
            </div>
        </div>
    </div>
    <div class="itmShow">
        <h1>{{item.name}}</h1>
        <img src="
        {% if item.img == '' || null || undefined %}
        data:image/png;base64,
        {% else %}
        {{item.img}}
        {% endif %}
        " alt="">
    </div>
    <hr class="vert">
    <div class="itmInfo">
        <h4>Price Paid:</h4>
        <p class="paidPrice">${{item.pricePaid}}</p>
        <h4>Price Listed:</h4>
        {% if item.priceListed > item.pricePaid%}
        <p class="endPrice green">
        {% else %}
        <p class="endPrice red">
        {% endif %}
        ${{item.priceListed}}</p>
        <h5 class="date">Date Purchased:</h5>
        <div class="datePurchased">{{item.datePurchased}}</div>
        <div class="showBtns">
            <a href="/inventory/{{item._id}}/edit"><button>EDIT</button></a>
            <button id="delete">DELETE</button>
        </div>
    </div>
</div>

{% endblock %}